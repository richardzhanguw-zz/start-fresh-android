<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_consumption_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidapp.richard.startfresh.Activities.ConsumptionHistoryActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Past Calorie Intake History"
        android:textColor = "@color/colorPrimaryText"/>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/past_consumption_line_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
