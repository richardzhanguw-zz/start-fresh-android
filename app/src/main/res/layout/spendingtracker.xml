<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.androidapp.richard.startfresh.Fragments.SpendingTracker">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "$1500.00"
            android:height="80dp"
            android:gravity="center"
            android:textSize="40sp"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/settings_button"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            app:backgroundTint = "@color/colorPrimary"
            android:id="@+id/settings_buttons" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity = "center_horizontal"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:text = "left to spend for this month" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text = "Add New Item"
            android:onClick="onAddNewSpendingItemClicked"
            android:id="@+id/see_past_counts_button"
            android:layout_marginStart="126dp"
            android:theme = "@style/AppTheme.Button"
            android:layout_marginBottom="6dp" />
    </LinearLayout>
    <ListView
        android:id="@+id/spending_tracker_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
