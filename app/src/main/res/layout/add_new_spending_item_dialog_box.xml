<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:gravity = "center_horizontal"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/item_price_edit_text"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_name_edit_text"
        android:layout_marginStart="7dp"
        android:layout_above="@+id/item_price_edit_text"
        android:layout_toEndOf="@+id/textView8" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_price_edit_text"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/item_name_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/textView7"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />
</RelativeLayout>